{
	"extends": [
		"next/core-web-vitals",
		"eslint:recommended",
		"plugin:tailwindcss/recommended"
	],
	"plugins": [
		"@stylistic",
		"unused-imports"
	],
	"rules": {
		"no-unused-vars": "off",
		"react/no-unescaped-entities": "warn",
		"import/order": [
			"error",
			{
				"groups": [
					"builtin",
					"external",
					[
						"internal",
						"parent",
						"sibling"
					],
					"index",
					"object",
					"type"
				]
			}
		],
		"unused-imports/no-unused-imports": "error",
		"unused-imports/no-unused-vars": [
			"warn",
			{
				"vars": "all",
				"varsIgnorePattern": "^_",
				"args": "after-used",
				"argsIgnorePattern": "^_"
			}
		],
		"import/no-duplicates": [
			"error",
			{
				"considerQueryString": true
			}
		],
		"semi": ["error", "always"]
	},
	"settings": {
		"import/resolver": {
			"typescript": {}
		}
	},
	"parser": "@typescript-eslint/parser"
}